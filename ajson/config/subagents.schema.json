{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Subagents Configuration",
  "type": "object",
  "properties": {
    "subagents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "provider": { "type": "string", "enum": ["openai", "gemini", "anthropic", "mock"] },
          "key_ref": { "type": "string", "pattern": "^ENV:[A-Z0-9_]+$" },
          "capabilities": { "type": "array", "items": { "type": "string" } },
          "enabled": { "type": "boolean" }
        },
        "required": ["id", "provider", "key_ref"]
      }
    }
  }
}
